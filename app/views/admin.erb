<% @style = "/admin.css"%>
<h2 id="title">Bem-vindo a 치rea de adm</h2>

<div class="box">
    <div>
        <h3 id="title">Comidas: </h3>
        <% unless @foods.empty? %>
            <ul>
                
                <% @foods.each do | food |%>

                    <li>
                        <div class="foods">
                            
                            <h4><%= food.getFactoredName %></h4>
                            <p>Barraca: <%= food.id %></p>
                            <div>
                                <form action="/admin/<%= food.name %>/delete" method="post">
                                    <button type="submit" id="btn">Deletar</button>
                                </form>
                                <a id="edit" href="/admin/<%= food.name %>">Editar</a>
                            </div>
                        </div>
                    </li>
                <% end %>
            </ul>
        <% else %>
            <p>Aqui est치 muito quieto...</p>
        <% end %>
    </div>

    <div id="form">
        <h3>Adicionar comida</h3>
        <form action="/admin/createfood" method="post" id="form">
            <label for="name">Nome:</label>
            <input type="text" name="name">
            <label for="id">Numero da barraca: </label>
            <input type="text" name="id">
            <button type="submit">Criar</button>
        </form>
    </div>
</div>

