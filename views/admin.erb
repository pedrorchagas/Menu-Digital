<% @style = "/admin.css"%>
<h2 id="title">Bem-vindo a Ã¡rea de adm</h2>

<div>
    <div>
        <h3 id="title">Comidas: </h3>
        <ul>
            
            <% @foods.each do | food |%>

                <li>
                    <div class="foods">
                        
                        <h4><%= food.getFactoredName %></h4>
                        <p>Barraca: <%= food.id %></p>
                        <div>
                            <form action="/admin/<%= food.name %>/delete" method="post">
                                <input type="submit" value="Deletar">
                            </form>
                            <a href="/admin/<%= food.name %>">Editar</a>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>

    <div id="form">
        <h3>Adicionar comida</h3>
        <form action="/admin/createfood" method="post" id="form">
            <label for="name">Nome:</label>
            <input type="text" name="name">
            <label for="id">Numero da barraca: </label>
            <input type="text" name="id">
            <button type="submit">Criar</button>
        </form>
    </div>
</div>

<div>
    <div>
        <h3 id="title">Bebidas: </h3>
