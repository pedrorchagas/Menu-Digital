            <% @toys.each do | toy |%>

                <li>
                    <div class="foods">
                        
                        <h4><%= toy.name %></h4>
                        <div>
                            <form action="/admin/toy/<%= toy.id %>/delete" method="post">
                                <input type="submit" value="Deletar">
                            </form>
                        </div>
